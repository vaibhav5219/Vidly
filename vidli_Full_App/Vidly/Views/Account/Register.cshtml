@model Vidly.ViewModels.CustomerRegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.registerViewModel.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.registerViewModel.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.registerViewModel.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.registerViewModel.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.registerViewModel.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.registerViewModel.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
 @*  <div class="form-group">
        @Html.LabelFor(m => m.registerViewModel.DrivringLicence, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.registerViewModel.DrivringLicence, new { @class = "form-control" })
        </div>
    </div>
   <div class="form-group">
        @Html.LabelFor(m => m.registerViewModel.Mobile, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.registerViewModel.Mobile, new { @class = "form-control" })
        </div>
    </div>
    @*Customer Form  *@
    <div class="form-group">
        @Html.LabelFor(m => m.customerFormViewModel.Customer.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.customerFormViewModel.Customer.Name, new { @class = "form-control" })
        </div></div>
    <div class="form-group">
        @Html.LabelFor(m => m.customerFormViewModel.Customer.Birthdate, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.customerFormViewModel.Customer.Birthdate, "{0:d MMM yyyy}", new { @class = "form-control" })
            </div></div>
    <div class="form-group">
        @Html.LabelFor(m => m.customerFormViewModel.Customer.MembershipTypeId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.customerFormViewModel.Customer.MembershipTypeId, new SelectList(Model.customerFormViewModel.MembershipTypes, "Id", "Name"), "Select Membership Type", new { @class = "form-control" })
            </div></div>
    <div class="checkbox">
        <label class="col-md-10 control-label">
            Subscribed to Newsletter?
        </label>
        <div class="col-md-2">
            @Html.CheckBoxFor(m => m.customerFormViewModel.Customer.IsSubscribedToNewsletter)
        </div>
    </div>
    @Html.HiddenFor(m => m.customerFormViewModel.Customer.Id, new { @class = "col-md-2 control-label" })
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary btn-lg btn-block" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
