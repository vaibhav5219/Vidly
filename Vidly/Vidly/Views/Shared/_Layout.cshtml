<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @** Nav bar *@
    <div class="navbar navbar-inverse " >
        <div class="container ">
            <div class="navbar-header">
                <button type="button">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Vidly", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

                <div class="navbar-collapse nav">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Customer", "Index", "Customers")</li>
                        <li>@Html.ActionLink("Movies", "Moview", "Movies")</li>
                        <li>@Html.ActionLink("Add New Customer", "New", "Customers")</li>
                        <li>@Html.ActionLink("Add New Movie", "New", "Movies")</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <br/>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Vidly</p>
        </footer>
    </div>

    @*  @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")  *@
    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)

</body>
</html>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}